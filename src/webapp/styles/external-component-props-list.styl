@require '_variables'

.p-external-component-props-list
  .p-row-item-label
    font-size $font-size-xxxs
    font-weight 600
    text-transform uppercase
  .p-row-item-value
    font-family $font-family-secondary
    font-size $font-size-xxs
    white-space normal
    overflow visible
  .p-row-item
    .p-required-symbol
      position relative
      left 3px
    span:not(.p-tag)
      float left
      font-family $font-family-secondary
      font-size $font-size-xxs
  .p-required-caption
    margin-top 20px
